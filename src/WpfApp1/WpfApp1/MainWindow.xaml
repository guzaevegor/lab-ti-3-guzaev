<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RSA Шифрование" Height="902" Width="1243"
        MinHeight="450" MinWidth="700"
        FontFamily="Global User Interface" FontSize="14">

    <Window.Resources>
        <!-- Общие стили -->
        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="ParameterLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,10,5" />
            <Setter Property="Width" Value="30" />
        </Style>
        <Style x:Key="ParameterTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="ValidationLabel" TargetType="Label">
            <Setter Property="Margin" Value="0,2,0,2" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="10,5" />
        </Style>
        <Style x:Key="FileButton" TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="0,5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Главное меню -->
        <Menu Grid.Row="0" Grid.ColumnSpan="2" FontFamily="Global User Interface" FontSize="14">
            <MenuItem Header="Файл" x:Name="FileMenu">
                <MenuItem Header="Открыть обычный файл" x:Name="OpenNormalMenuItem" Click="OpenMenuItem_Click" />
                <MenuItem Header="Открыть файл с зашифрованным текстом" x:Name="OpenEncryptedMenuItem" Click="OpenMenuItem_Click" />

                <MenuItem Header="Сохранить результат" x:Name="SaveMenuItem"
                          InputGestureText="Ctrl+S"
                          Click="SaveMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" Click="AboutMenuItem_Click"/>
                <MenuItem Header="Документация" Click="DocumentationMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Grid.ColumnSpan="2">
            <!-- Вкладка алгоритм RSA -->
            <TabItem Header="Алгоритм RSA" x:Name="TabRSAEncryption">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Секция ввода параметров -->
                    <GroupBox Grid.Row="0" Grid.Column="0" Header="Параметры RSA" Margin="10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Ввод P -->
                            <Label Grid.Row="0" Grid.Column="0" Content="P:" Style="{StaticResource ParameterLabel}"/>
                            <Label Grid.Row="0" Grid.Column="1" x:Name="PValidationLabel" 
               Content="Введите простое число P" 
               Style="{StaticResource ValidationLabel}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="PTextBox" 
                 Style="{StaticResource ParameterTextBox}"
                 TextChanged="PTextBox_TextChanged"/>

                            <!-- Ввод Q -->
                            <Label Grid.Row="2" Grid.Column="0" Content="Q:" Style="{StaticResource ParameterLabel}"/>
                            <Label Grid.Row="2" Grid.Column="1" x:Name="QValidationLabel" 
               Content="Введите простое число Q" 
               Style="{StaticResource ValidationLabel}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="QTextBox" 
                 Style="{StaticResource ParameterTextBox}"
                 TextChanged="QTextBox_TextChanged"/>
                        </Grid>
                    </GroupBox>

                    <!-- Секция ввода закрытого ключа -->
                    <!-- Секция ввода закрытого ключа -->
                    <GroupBox Grid.Row="1" Grid.Column="0" Header="Закрытый ключ (d)" Margin="10,0,10,10">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Ввод KC (d) -->
                            <Label Grid.Row="0" Grid.Column="0" Content="d:" Style="{StaticResource ParameterLabel}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="KCTextBox" 
                 Style="{StaticResource ParameterTextBox}"
                 TextChanged="KCTextBox_TextChanged"/>
                            <Label Grid.Row="0" Grid.Column="1" x:Name="KCValidationLabel" 
               Content="Введите закрытый ключ d" 
               Style="{StaticResource ValidationLabel}"/>
                        </Grid>
                    </GroupBox>

                    <!-- Секция результатов и информации с перемещенными кнопками -->
                    <GroupBox Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Header="Результаты" Margin="10,0,10,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Заголовок исходного текста -->
                                <RowDefinition Height="0.4*"/>
                                <!-- Поле исходного текста -->
                                <RowDefinition Height="Auto"/>
                                <!-- Заголовок результатов -->
                                <RowDefinition Height="0.6*"/>
                                <!-- Поле результатов -->
                                <RowDefinition Height="Auto"/>
                                <!-- Информация о размере -->
                                <RowDefinition Height="Auto"/>
                                <!-- Кнопки -->
                                <RowDefinition Height="Auto"/>
                                <!-- Прогресс-бар -->
                            </Grid.RowDefinitions>

                            <!-- Секция исходного текста (новая) -->
                            <Label Grid.Row="0" Content="Исходный текст (десятичная система):" 
               Style="{StaticResource SectionLabel}"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="SourceTextBox" 
                     TextWrapping="Wrap" 
                     IsReadOnly="True"
                     Background="#F8F8F8"
                     BorderThickness="1"/>
                            </ScrollViewer>

                            <!-- Существующая секция результатов -->
                            <Label Grid.Row="2" x:Name="ResultsHeaderLabel" 
               Content="Результат операции (десятичная система):" 
               Style="{StaticResource SectionLabel}"/>

                            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="ResultsTextBox" 
                     TextWrapping="Wrap" 
                     IsReadOnly="True"
                     Background="#F8F8F8"
                     BorderThickness="1"/>
                            </ScrollViewer>

                            <!-- Остальные элементы остаются без изменений -->
                            <TextBlock Grid.Row="4" x:Name="DataInfoTextBlock" 
                   Text="Исходных байт: 0 | Результат: 0 байт" 
                   Margin="5" FontSize="12"/>

                            <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,10">
                                <Button Content="Шифровать" x:Name="EncryptButton"
                    Style="{StaticResource ActionButton}" 
                    Click="EncryptButton_Click"/>
                                <Button Content="Расшифровать" x:Name="DecryptButton"
                    Style="{StaticResource ActionButton}" 
                    Click="DecryptButton_Click"/>
                            </StackPanel>

                            <ProgressBar Grid.Row="6" x:Name="OperationProgressBar" 
                     Height="20" Margin="0,10"/>
                        </Grid>
                    </GroupBox>

                    <!-- Секция лога и расчетов -->
                    <GroupBox Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" 
          Header="Ваши действия" Margin="10">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                <TextBlock Text="Вычисленные параметры:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0" Content="N =" Margin="0,2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NValueTextBlock" 
                           Text="—" Margin="5,2" VerticalAlignment="Center"/>

                                    <Label Grid.Row="1" Grid.Column="0" Content="Φ(N) =" Margin="0,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PhiValueTextBlock" 
                           Text="—" Margin="5,2" VerticalAlignment="Center"/>

                                    <Label Grid.Row="2" Grid.Column="0" Content="e =" Margin="0,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="KOValueTextBlock" 
           Text="—" Margin="5,2" VerticalAlignment="Center"/>


                                    <Label Grid.Row="3" Grid.Column="0" Content="Статус =" Margin="0,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="StatusTextBlock" 
                           Text="Ожидание ввода параметров" Margin="5,2" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="LogItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                   Margin="0,2" 
                                   TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </GroupBox>

                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</Window>
